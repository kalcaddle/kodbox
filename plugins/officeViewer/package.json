{
	"id":"officeViewer",
	"name":"{{LNG['officeViewer.meta.name']}}",
	"title":"{{LNG['officeViewer.meta.title']}}",
	"version":"1.10", 
	"category":"file",
	"source":{
		"icon":"{{pluginHost}}static/images/icon.png"
	},
	"description":"{{LNG['officeViewer.meta.desc']}}",
	"auther":{
		"copyright":"kodcloud",
		"homePage":"http://kodcloud.com"
	},
	"meta":{
		"needNetwork": 1
	},
	"networkDesc": "{{LNG['officeViewer.meta.netwrokDesc']}}",
	"configItem":{
		"formStyle":{
			"className":"form-box-title-left",
			"tabs":{
				"{{LNG['admin.setting.base']}}":"pluginAuth,sep001,openWith,fileSort,fileExt",
				"{{LNG['officeViewer.meta.service']}}":"openType,openTypeDesc,sep002,jsOpen,jsFileExt,lbSoffice,lbFileExt,olApiServer,olFileExt,ggDesc,ggApiServer,ggFileExt,yzFileExt"
			},
			"loadFile":"{{pluginHost}}static/libreoffice/check.js"
		},
		"pluginAuth":{
			"type":"userSelect",
			"value":{"all":1},
			"display":"{{LNG['admin.plugin.auth']}}",
			"desc":"{{LNG['admin.plugin.authDesc']}}",
			"require":1
		},
		"sep001":"<hr/>",
		"openWith":{
			"type":"radio",
			"value":"dialog",
			"display":"{{LNG['admin.plugin.openWith']}}",
			"info":{
				"dialog":"{{LNG['admin.plugin.openWithDilog']}}",
				"window":"{{LNG['admin.plugin.openWithWindow']}}"
			}
		},
		"fileSort":{
			"type":"number",
			"display":"{{LNG['admin.plugin.fileSort']}}",
			"desc":"{{LNG['admin.plugin.fileSortDesc']}}",
			"value":100
		},
		"fileExt":{
			"type":"tags",
			"display":"{{LNG['admin.plugin.fileExt']}}",
			"desc":"{{LNG['admin.plugin.fileExtDesc']}}",
			"className": "hidden",
			"value":"doc,docx,docm,dot,dotx,dotm,rtf,xls,xlsx,xlt,xlsb,xlsm,csv,ppt,pptx,pps,ppsx,pptm,potm,ppam,potx,ppsm,odt,ods,odp,ott,ots,otp,wps,wpt"
		},

		"openType":{
			"type":"segment",
			"value":"js",
			"display":"{{LNG['officeViewer.meta.openType']}}",
			"info":{
				"js":"{{LNG['officeViewer.meta.allType']}}",
				"lb":"LibreOffice",
				"ol":"OfficeLive",
				"gg":"{{LNG['officeViewer.googleDocs.name']}}",
				"yz":"{{LNG['officeViewer.yzOffice.name']}}"
			},
			"switchItem":{
				"js":"openTypeDesc,jsOpen,jsFileExt",
				"lb":"lbSoffice,lbFileExt",
				"ol":"olApiServer,olFileExt",
				"gg":"ggDesc,ggApiServer,ggFileExt",
				"yz":"yzFileExt"
			}
		},
		"openTypeDesc":{
			"type":"html",
			"display":"",
			"desc":"{{LNG['officeViewer.meta.allTypeDesc']}}"
		},
		"sep002":"<hr/>",

		"jsOpen":{
			"type":"switch",
			"value":"1",
			"display":"{{LNG['officeViewer.jsOffice.name']}}",
			"desc":"{{LNG['officeViewer.jsOffice.desc']}}",
			"switchItem":{"0":"","1":"jsFileExt"}
		},
		
		"jsFileExt":{
			"type":"tags",
			"display":"{{LNG['admin.plugin.fileExt']}}",
			"desc":"{{LNG['admin.plugin.fileExtDesc']}}",
			"value":"docx,xls,xlsx,csv,pptx"
		},

		"lbSoffice":{
			"type":"input",
			"value":"",
			"attr":{"placeholder":"/usr/lib64/libreoffice/program/soffice"},
			"display":"{{LNG['officeViewer.libreOffice.path']}}",
			"desc":"{{LNG['officeViewer.libreOffice.pathDesc']}}"
		},
		"lbFileExt":{
			"type":"tags",
			"display":"{{LNG['admin.plugin.fileExt']}}",
			"desc":"{{LNG['admin.plugin.fileExtDesc']}}",
			"value":"doc,docx,ods,xls,xlsx,odt,ppt,pps,pptx,odp,rtf,csv,tsv"
		},

		"olApiServer":{
			"type":"input",
			"value":"https://view.officeapps.live.com/op/embed.aspx?src=",
			"display":"{{LNG['officeViewer.officeLive.apiServer']}}",
			"desc":"{{LNG['officeViewer.officeLive.apiServerDesc']}}",
			"require":1
		},
		"olFileExt":{
			"type":"tags",
			"display":"{{LNG['admin.plugin.fileExt']}}",
			"desc":"{{LNG['admin.plugin.fileExtDesc']}}",
			"value":"doc,docx,docm,dot,dotx,dotm,rtf,xls,xlsx,xlt,xlsb,xlsm,csv,ppt,pptx,pps,ppsx,pptm,potm,ppam,potx,ppsm,odt,ods,odp,ott,ots,otp,wps,wpt"
		},

		"ggDesc":{
			"type":"html",
			"display":"{{LNG['officeViewer.meta.instruction']}}",
			"desc":"{{LNG['officeViewer.googleDocs.desc']}}"
		},
		"ggApiServer":{
			"type":"input",
			"value":"https://docs.google.com/viewer?url=",
			"display":"",
			"className": "hidden",
			"require":1
		},
		"ggFileExt":{
			"type":"tags",
			"display":"{{LNG['admin.plugin.fileExt']}}",
			"desc":"{{LNG['admin.plugin.fileExtDesc']}}",
			"value":"doc,docx,rtf,xls,xlsx,wps,ppt,pptx,pps,.odt,ods,odp,ott,ots,otp,dxf,ps,eps,xps,psd,tif,tiff,bmp,svg,pages,ai,ttf"
		},

		"yzFileExt":{
			"type":"tags",
			"display":"{{LNG['admin.plugin.fileExt']}}",
			"desc":"{{LNG['admin.plugin.fileExtDesc']}}",
			"value":"doc,docx,docm,dot,dotx,dotm,rtf,wps,wpt,xls,xlsx,xlt,xlsm,csv,ppt,pptx,pps,ppsx"
		}
	}
}
